<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#000000">

    <!-- Post Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingHorizontal="12dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/postProfileImage"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/lab_logo"
            app:civ_border_width="1dp"
            app:civ_border_color="#333333" />

        <TextView
            android:id="@+id/postUsername"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_weight="1"
            android:text="username"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/postMoreButton"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_more" />
    </LinearLayout>

    <!-- Post Image -->
    <ImageView
        android:id="@+id/postImage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:src="@drawable/foto1" />

    <!-- Post Actions -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal"
        android:paddingHorizontal="12dp"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/postLikeButton"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_like"
            android:layout_marginEnd="16dp" />

        <ImageView
            android:id="@+id/postCommentButton"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_comment"
            android:layout_marginEnd="16dp" />

        <ImageView
            android:id="@+id/postShareButton"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_share" />

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/postSaveButton"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_save" />
    </LinearLayout>

    <!-- Post Details -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="12dp"
        android:paddingBottom="16dp">

        <TextView
            android:id="@+id/postLikesCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="123 likes"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/postCaption"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="username Caption text goes here..."
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/postCommentsText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="View all 10 comments"
            android:textColor="#AAAAAA"
            android:textSize="14sp"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/postTimeText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2 HOURS AGO"
            android:textColor="#AAAAAA"
            android:textSize="12sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#333333" />

</LinearLayout>